{

    // version of the setting file, always 0.2
    "version": "0.2",

    // current active spelling language
    "language": "en",

    // a list of words to be always considered correct
    "words": [
        "*ISNT*",
        "nrows",
        "infile",
    ],

    // a list of words to be always considered incorrect
    "flagWords": [
        "hte",
    ],

    // a list of words to be ignored (even if they are in the flagWords)
    "ignoreWords": [
        "pyutilities",
        "абвгдеёжзийклмнопрстуфхцчшщъыьэюя",
        "rtype",
        "namenode",
        "xlrd",
        "xlwt",
        "loguru",
        "xlwings",
        "pyyaml",
        "openpyxl",
        "urllib3",
        "paramiko",
        "prettytable",
        "useragent"
    ],

    // a list of globs to specify which files are to be ignored
    "ignorePaths": [
    ]

}
